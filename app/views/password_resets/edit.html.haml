%h1 Reset Your Password

= form_with(model: @user, url: password_reset_path(@user.reset_token), method: :patch, local: true, id: "password_reset_form") do |f|
  %div
    = hidden_field_tag :email, @user.email
  %div
    = f.label :password, "New Password"
    = f.password_field :password, required: true, id: "new_password_field"
  %div
    = f.label :password_confirmation, "Confirm New Password"
    = f.password_field :password_confirmation, required: true, id: "password_confirmation_field"
  %div
    = f.submit "Submit", class: "btn btn-primary"
