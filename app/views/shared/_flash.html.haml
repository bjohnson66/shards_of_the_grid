#flash_messages{ style: "margin-bottom: 20px;" }
  - flash.each do |type, message|
    - case type.to_sym
    - when :notice
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #856404; background-color: #fff3cd; border: 1px solid #ffeeba;" }
        %strong Notice:
        = message
    - when :warning
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #856404; background-color: #fff3cd; border: 1px solid #ffeeba;" }
        %strong Warning:
        = message
    - when :alert
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #004085; background-color: #cce5ff; border: 1px solid #b8daff;" }
        %strong Alert:
        = message
    - when :danger
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb;" }
        %strong Danger:
        = message
    - when :success
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #155724; background-color: #d4edda; border: 1px solid #c3e6cb;" }
        %strong Success:
        = message
    - else
      %div{ class: "alert", style: "padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 10px; color: #383d41; background-color: #e2e3e5; border: 1px solid #d6d8db;" }
        %strong= type.capitalize
        = ": #{message}"
